<div>
    <div class="jumbotron text-center w-75 m-auto p-0">
        <h1 class="display-3">Welcome to Eat Da Burger Joint</h1>
        <p class="lead">Craft your Own burger or Devour one of our Signature burgers</p>
        <hr class="my-2">
        <p class="lead p-3">
            <a class="btn btn-primary btn-lg m-2" href="/create" role="button">Craft your own Burger</a>
        </p>

    </div>
    <div class="w-75 m-auto">
        <form action="/create" method="POST" class="form-group">
            <div class="row justify-content-center">
                <div class="col-6">
                    <input type="text" class="form-control" name="burger_name" aria-describedby="helpId" placeholder="California ABLT Burger"
                        minlength="4" required>
                    <input type="url" class="form-control" name="picurl" aria-describedby="helpId" placeholder="http://www.xyz.com/burger.jpg"
                        minlength="10" maxlength="500" required>
                </div>
                <div class="col-2">
                    <button type="submit">CREATE</button>
                </div>
            </div>
        </form>
    </div>

    <div class="container text-center p-5">
        <a href="/api/burgers" class="badge badge-dark">API</a>
    </div>
</div>

